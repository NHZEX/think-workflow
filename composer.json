{
    "name": "zxin/think-workflow",
    "description": "Integerate Symfony Workflow component into Thinkphp.",
    "keywords": [
        "workflow",
        "thinkphp"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0|^8.1|^8.2",
        "symfony/workflow": "^6.0",
        "symfony/process": "^6.0",
        "symfony/event-dispatcher-contracts": "^3.0",
        "topthink/framework": "~6.1.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^9.0",
        "symfony/var-dumper": "^6.0",
        "fakerphp/faker": "^1.13|^1.9.1",
        "orchestra/testbench": "^6.0|^7.0|^8.0",
        "php-cs-fixer/shim": "^3.14"
    },
    "autoload": {
        "psr-4": {
            "Zxin\\Think\\Workflow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "think": {
            "services": [],
            "config": {
                "workflow": "config/workflow.php",
                "workflow_registry": "config/workflow_registry.php"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
